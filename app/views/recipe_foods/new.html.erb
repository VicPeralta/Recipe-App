<%= turbo_frame_tag "addIngredient" do%>
  <%= form_with(model:@ingredient, 
    url:recipe_recipe_foods_path(recipe_id:@recipe_id))  do |form| %>
    <%= form.label :food_id, "Food", class:"form-label" %>
    <%= form.select :food_id, current_user.foods.map{|food| [food.name, food.id]}, required: true %>
    <%= form.label :quantity, "Quantity", class:"form-label " %>
    <%= form.number_field :quantity, required: true %>
    <%= form.submit "Add ingredient", class: "btn btn-outline-primary" %>
    <%= link_to "Close", recipe_path(@recipe_id), class:"btn btn-outline-secondary"  %>
  <% end %>
<% end %>