<% if flash.any?%>
  <% flash.each do |name, msg| -%>
    <%if name=='alert'%>
      <div class='alert'>
      <%= content_tag :div, msg, class: name %>
      </div>
    <%else%>
      <div class='notice'>
      <%= content_tag :div, msg, class: name %>
      </div>
    <% end -%>
  <% end -%>
<%end%>