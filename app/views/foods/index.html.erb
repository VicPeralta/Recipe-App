<h1 class="mt-2 text-center">Foods</h1>
<%= link_to 'Add new food', new_food_path, :class => 'btn btn-sm float-right btn-primary mt-1 mb-4 w-25' %>
<div class="clear margin-table">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Food</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
        <td><%= food.name%></td>
        <td><%= food.measurementUnit%></td>
        <td><%= number_to_currency food.price%></td>
        <td><%= button_to "Delete", food, method: :delete, class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div> 